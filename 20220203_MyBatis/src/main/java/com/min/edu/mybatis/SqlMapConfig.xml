<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<!-- 1. 외부에서 접속정보인 Properties 파일을 연결 properties 태그-->
	<properties resource="properties/db.properties"/>
	<!-- 2. MyBatis의 환경설정을 위한 settings -->

	<!-- 공통으로 사용되는 DTO/VO의 패키지명.클래스를 별칭으로 사용 -->
	<typeAliases>
		<typeAlias type="com.min.edu.vo.MyBatisVo" alias="jobsvo"/>
	</typeAliases>
	
	<!-- 3. Alias 쿼리문의 xml 혹은 interface에서 사용하는 DTO/VO 객체를 호출하는 별칭 -->
	
	<!-- 4. DB접속 정보인 환경설정 Environments를 설정 접속정보(Datasource) + Transaction처리 -->
	<environments default="developments">
	  <environment id="developments">
	 	<transactionManager type="JDBC"/>
	 	<dataSource type="POOLED">
	 		<property name="driver" value="${driver}"/><!-- "oracle.jdbc.driver.OracleDriver" -->
	 		<property name="url" value="${url}"/><!-- "jdbc:oracle:thin:@localhost:1521:XE" -->
	 		<property name="username" value="${username}"/><!-- BD -->
	 		<property name="password" value="${password}"/><!-- bd -->
	 	</dataSource>
	  </environment>
	</environments>
	
	<!-- 5. 실행되는 쿼리문의 파일인 Mapper.xml 을 등록 -->
	<mappers>
		<mapper resource="com/min/edu/mybatis/A_Jobs_Mapper.xml"/>
		<mapper resource="com/min/edu/sql/B_Jobs_Select.xml"/>
	</mappers>
</configuration>