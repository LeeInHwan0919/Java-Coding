<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<!-- 1. 외부에서 접속정보인 Properties 파일을 연결 properties 태그-->
	<properties resource="properties/db.properties"/>
	<!-- 2. MyBatis의 환경설정을 위한 settings -->

	<!-- 3. Alias 쿼리문의 xml 혹은 interface에서 사용하는 DTO/VO 객체를 호출하는 별칭 -->
	
	<!-- 4. DB접속 정보인 환경설정 Environments를 설정 접속정보(Datasource) + Transaction처리 -->
	<environments default="development">
	  <environment id="development">
	 	<transactionManager type="JDBC"/>
	 	<dataSource type="POOLED">
	 		<property name="driver" value="${driver}"/>
	 		<property name="url" value="${url}"/>
	 		<property name="username" value="${username}"/>
	 		<property name="password" value="${password}"/>
	 	</dataSource>
	  </environment>
	</environments>
	
	<!-- 5. 실행되는 쿼리문의 파일인 Mapper.xml 을 등록 -->
	
</configuration>